@model IEnumerable<Domain.News>
@using BasicCMSPage.Resources
@{
    ViewBag.Title = "Wiadomości z świata - edycja";
}

<h2>Wiaomości z świata</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @NewsResource.AddDate
        </th>
        <th>
            @NewsResource.ModificationDate
        </th>
        <th>
            @NewsResource.Content
        </th>
        <th>
            @NewsResource.Archive
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AddDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModificationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Archive)
        </td>
        <td>
            @Html.ActionLink(NewsResource.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(NewsResource.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(NewsResource.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
