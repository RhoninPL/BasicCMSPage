@model IEnumerable<Repositories.ViewModels.NewsIndexViewModel>
@{
    ViewBag.Title = "Newsy ze świata";

}
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="news-container">
            <div class="news-title">
                <div>
                    <h3><a href="/Home/Details/@item.Id">@item.Title</a></h3></div>
                <span>@item.AddDateTime</span>
                <span>Wyświetleń: @item.Views</span>
            </div>
            <div class="news-content">@item.News</div>
            <div class="news-author">
                <div>Autor: @item.User</div>
                <div>Komentarze (@item.CommentsCount)</div>
            </div>
        </div>
    }
}
else
{
    <h1>Brak wiadomości</h1>
}