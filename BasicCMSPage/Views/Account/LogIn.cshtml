@model BasicCMSPage.ViewModels.LogInViewModel

@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>LogInViewModel</h4>
        <hr/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label for="Name">Nazwa użytkownika:</label>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label for="Password">Hasło użytkownika:</label>
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zaloguj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
