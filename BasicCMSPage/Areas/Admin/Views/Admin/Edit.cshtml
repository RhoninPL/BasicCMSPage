@model Repositories.ViewModels.NewsEditViewModel
@using BasicCMSPage.Resources
@{
    ViewBag.Title = "Edycja artykułu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edycja artykułu</h2>


@using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label(NewsResource.Title,  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.News, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.News, new { @class = "form-control text-area-news" } )
                @Html.ValidationMessageFor(model => model.News, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(NewsResource.Archive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Archive)
                    @Html.ValidationMessageFor(model => model.Archive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(NewsResource.BackToListManagement, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
